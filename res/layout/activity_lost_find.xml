<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="8dip"
            android:text="安全号码"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_safe_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dip"
            android:layout_marginTop="8dip"
            android:text=""
            android:textColor="#000000"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dip"
        android:layout_marginTop="10dip"
        android:background="#44000000" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="protecting" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="8dip"
            android:text="防盗保护是否开启"
            android:textColor="#000000"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_protecting"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dip"
            android:layout_marginTop="8dip"
            android:src="@drawable/unlock"
            android:textColor="#000000"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dip"
        android:layout_marginTop="10dip"
        android:background="#44000000" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginTop="8dip"
        android:background="@color/ms_green"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="功能简介"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:layout_marginTop="15dip"
        style="@style/textContent"
        android:text="GPS追踪:#*location*#" />

    <TextView
        android:layout_marginTop="15dip"
        style="@style/textContent"
        android:text="播放报警音乐：#*alarm*#" />

    <TextView
        android:layout_marginTop="15dip"
        style="@style/textContent"
        android:text="远程数据销毁:#*wipedata*#" />

    <TextView
        android:layout_marginTop="15dip"
        style="@style/textContent"
        android:text="远程锁屏:#*lockscreen*#" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dip"
        android:layout_marginTop="15dip"
        android:background="#44000000" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="8dip"
        android:background="@drawable/common_btn_selector"
        android:clickable="true"
        android:onClick="reEnterGuide"
        android:text="重新进入设置向导"
        android:textColor="#000000"
        android:textSize="20sp" />

</LinearLayout>