<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp" >

        <LinearLayout
            android:id="@+id/ll_app_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_traffic_info_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/app" />

            <TextView
                android:id="@+id/tv_traffic_info_name"
                android:layout_width="100dp"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textSize="15dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_traffic_info_rx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="150KB"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_traffic_info_rx_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_traffic_info_rx"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/ll_app_info"
            android:text="下载流量："
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_traffic_info_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_traffic_info_rx"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="0KB"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_traffic_info_tx"
            android:layout_below="@id/tv_traffic_info_rx_lab"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/ll_app_info"
            android:text="上传流量："
            android:textSize="15dp" />
    </RelativeLayout>

</RelativeLayout>